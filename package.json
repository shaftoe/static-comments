{
  "name": "static-comments",
  "version": "1.0.0",
  "private": true,
  "description": "Enable comments for static websites hosted on GitHub",
  "author": "Alexander Fortin <shaftoe@users.noreply.github.com>",
  "license": "ISC",
  "repository": "https://github.com/shaftoe/static-comments.git",
  "homepage": "https://github.com/shaftoe/static-comments",
  "bugs": "https://github.com/shaftoe/static-comments/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "static",
    "static-site-generator"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "node ./server.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "probot": "^12.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "nock": "^13.1.1",
    "nodemon": "^2.0.12",
    "smee-client": "^1.2.2",
    "standard": "^16.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
